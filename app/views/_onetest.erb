<style>
  .submit-link {
    font-size: 0.9rem !important;
    padding: 6px 12px !important;
    line-height: 1.4 !important;
  }
  h2.submit-link {
    font-size: 1.2rem !important;
    margin: 0 !important;
  }
</style>
<div class="wide-container">
  <div class="form-card">
    <h2 class="mb-3">
      <a href="<%= test[:identifier] %>" class="submit-link"><%= test[:title] %></a>
    </h2>
    <p class="mb-3"><%= test[:description] %></p>
    <p class="mb-3">
      <a href="<%= test[:openapi] %>" class="submit-link">API Definition</a>
    </p>

    <details class="mb-3">
      <summary>Additional Details</summary>
      <table class="table" style="width: 100%;">
        <tr>
          <th class="bg-gray-200 text-left">Dimension</th>
          <td><a href="<%= test[:dimension] %>"><%= test[:dimension] %></a></td>
        </tr>
        <tr>
          <th class="bg-gray-200 text-left">Domain</th>
          <td><a href="<%= test[:domain] %>"><%= test[:domain] %></a></td>
        </tr>
        <tr>
          <th class="bg-gray-200 text-left">Benchmark or Metric</th>
          <td><a href="<%= test[:benchmark_or_metric] %>"><%= test[:benchmark_or_metric] %></a></td>
        </tr>
      </table>
    </details>
  </div>
</div>